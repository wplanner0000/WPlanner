<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="30dip" />
            <stroke android:width="0dip" android:color="#87ceeb" />
            <gradient android:angle="-90" android:startColor="#f2f3f4" android:endColor="#689a92"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="30dip" />
            <stroke android:width="0dip" android:color="#ffffff" />
            <solid android:color="#33cc33"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="30dip" />
            <stroke android:width="0dip" android:color="#87ceeb" />
            <gradient android:angle="-90" android:startColor="#000000" android:centerColor="#ff5555" android:endColor="#000000" />

        </shape>
    </item>
</selector>