<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ff5555"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Password "
        android:padding="10dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textColor="#fff"
        android:layout_marginTop="8dp"
        android:textSize="24dp"
        android:id="@+id/pass"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/oldpassword"
        android:maxLines="1"
        android:maxLength="15"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/pass"
        android:layout_marginTop="8dp"
        android:textColorHint="#fff"
        android:drawableLeft="@drawable/passwordkey"
        android:drawablePadding="10dp"
        android:textColor="#fff"
        android:inputType="textPassword"
        android:hint="Old Password"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/newpassword"
        android:hint="New Password"
        android:maxLines="1"
        android:textColor="#fff"
        android:maxLength="15"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:drawableLeft="@drawable/passwordconfirm"
        android:drawablePadding="10dp"
        android:inputType="textPassword"
        android:textColorHint="#fff"
        android:layout_below="@id/oldpassword"
        android:layout_marginTop="5dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/confirmnewpassword"
        android:hint="Confirm Password"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:maxLines="1"
        android:maxLength="15"
        android:textColorHint="#fff"
        android:textColor="#fff"
        android:drawableLeft="@drawable/passwordkey"
        android:drawablePadding="10dp"
        android:inputType="textPassword"
        android:layout_below="@id/newpassword"
        android:layout_marginTop="5dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/cancel"
        android:layout_marginBottom="8dp"
        android:text="Cancel"
        android:layout_marginLeft="20dp"
        android:textAllCaps="false"
        android:background="@drawable/rounded_border"
        android:layout_below="@id/confirmnewpassword"
        android:layout_marginTop="12dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/updatepass"
        android:background="@drawable/rounded_border"
        android:layout_marginLeft="10dp"
        android:textAllCaps="false"
        android:layout_below="@id/confirmnewpassword"
        android:layout_alignParentRight="true"
        android:text="  Update Password  "
        android:layout_marginRight="20dp"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="8dp"/>
</RelativeLayout>