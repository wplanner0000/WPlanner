<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f9f9"
    tools:context="com.example.lenovo.planner.profile.userprofile">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusableInTouchMode="true"
        >
    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/imgProfilePicture"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/account_logo"
        app:border_color="#fff"
        app:border_width="3dp" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:id="@+id/brn_edituser"
            android:background="@drawable/rounded_border"
            android:src="@mipmap/ic_mode_edit_black_24dp"
            />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layout_vendor"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:focusableInTouchMode="true"
        android:layout_below="@id/imgProfilePicture"
        >


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Personal Info"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginTop="8dp"
        android:paddingLeft="3dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:layout_below="@id/spn_category"
        android:id="@+id/personaldetails"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:hint="Name"
        android:id="@+id/name"
        android:textColorHint="#000"
        android:textColor="#000"
        android:background="#fff"
        android:gravity="center_vertical"
        android:layout_below="@id/personaldetails"
        android:drawablePadding="20dp"
        android:drawableLeft="@drawable/names"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:hint="Contact Number"
        android:id="@+id/contact"
        android:textColorHint="#000"
        android:textColor="#000"
        android:background="#fff"
        android:gravity="center_vertical"
        android:drawablePadding="20dp"
        android:layout_marginTop="2dp"
        android:drawableLeft="@drawable/phone"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/contact"
        android:textColorHint="#000"
        android:textColor="#000"
        android:background="#fff"
        android:gravity="center_vertical"
        android:layout_marginTop="2dp"
        android:hint="Email"
        android:drawablePadding="20dp"
        android:id="@+id/email"
        android:drawableLeft="@drawable/mail"
        />

    </RelativeLayout>
    </RelativeLayout>
</FrameLayout>
