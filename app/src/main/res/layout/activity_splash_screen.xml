<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lenovo.planner.applicationstart.SplashScreen"
    android:background="#ff5555"
    >

    <ImageView
        android:layout_width="240dp"
        android:layout_height="220dp"
        android:src="@drawable/mainlogo1"
        android:id="@+id/logo"
        android:scaleType="centerInside"
        android:layout_marginBottom="78dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/appName"
        android:text="Wedding Planner"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:visibility="invisible"
        android:textSize="38sp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="130dp"
        android:textColor="#fff"
        android:textStyle="bold"

        />
    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="10dp"
        android:layout_alignParentBottom="true"
        android:visibility="invisible"
        android:id="@+id/frag_holder"
        android:layout_weight="0.95"
        android:layout_marginBottom="20dp"
        >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_border"
        android:id="@+id/frag_holder2"
        >
    </RelativeLayout>
    </android.support.v7.widget.CardView>



</RelativeLayout>
